{
  "name": "nci-ansible-ui",
  "version": "1.1.2",
  "description": "Simple web interface for run ansible playbooks",
  "main": "app.js",
  "scripts": {
    "dev-nci": "$SHELL -c 'cd dev && ../node_modules/.bin/nci'",
    "test-ui": "cypress run",
    "dev-server-and-test-ui": "nrun build && nrun dev-nci& echo \"Server pid: $!\" && wait-on --timeout 30000 http://127.0.0.1:3000 && nrun test-ui",
    "build-less": "lessc app/styles/index.less > static/css/index.css",
    "build-js": "browserify  app/app.js -t ./transforms/jade.js | uglifyjs -mc > static/js/app.build.js",
    "watch-less": "chokidar --initial --silent app/styles/**/*.less app/styles/index.less -c 'npm run build-less'",
    "watch-js": "watchify app/app.js -t ./transforms/jade.js -o static/js/app.build.js -dv",
    "_init-dev": "touch static/js/app.build.js && touch static/css/index.css",
    "dev": "test -z $NODE_ENV && export NODE_ENV=development; nrun _init-dev && parallelshell 'nrun build-fonts' 'nrun watch-less' 'nrun watch-js' 'nrun build-html' 'nrun dev-nci'",
    "sync": "npm install && npm prune",
    "lint": "jshint ./",
    "build-fonts": "mkdir -p static/fonts/ && cp ./node_modules/bootstrap/fonts/* ./static/fonts/ && cp ./node_modules/font-awesome/fonts/* ./static/fonts/ && cp ./node_modules/scmicons/fonts/* ./static/fonts/",
    "build-clean": "rm static/index.html",
    "build-html": "jade views/index.jade --obj \"{'env': '$NODE_ENV'}\" -o static/",
    "build": "test -z $NODE_ENV && export NODE_ENV=production; nrun build-fonts && nrun build-js && nrun build-less && nrun build-html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/node-ci/nci-ansible-ui.git"
  },
  "keywords": [
    "nciplugin",
    "ui",
    "interface",
    "ansible",
    "playbook"
  ],
  "contributors": [
    {
      "name": "Oleg Korobenko",
      "email": "oleg.korobenko@gmail.com"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/node-ci/nci-ansible-ui/issues"
  },
  "homepage": "https://github.com/node-ci/nci-ansible-ui",
  "dependencies": {
    "data.io": "0.3.0",
    "socket.io": "1.7.2",
    "twostep": "0.4.2",
    "underscore": "1.8.3"
  },
  "devDependencies": {
    "ansi_up": "1.3.0",
    "bootstrap": "3.3.4",
    "browserify": "13.0.0",
    "chokidar-cli": "1.2.0",
    "cypress": "3.8.3",
    "font-awesome": "4.3.0",
    "jade": "1.11.0",
    "jshint": "2.4.4",
    "less": "3.7.1",
    "memdown": "5.1.0",
    "moment": "2.10.6",
    "nci": "1.0.24",
    "nci-static-server": "1.2.0",
    "nci-yaml-reader": "1.2.1",
    "nrun": "0.1.4",
    "parallelshell": "3.0.2",
    "react": "0.14.3",
    "react-dom": "0.14.3",
    "react-jade": "2.5.0",
    "react-router": "0.13.5",
    "reflux": "0.2.7",
    "scmicons": "1.3.0",
    "simple-scrolltop": "1.0.1",
    "socket.io-client": "1.7.2",
    "through": "2.3.8",
    "uglify-js": "2.8.29",
    "url-join": "4.0.1",
    "wait-on": "4.0.0",
    "watchify": "3.6.1"
  },
  "peerDependencies": {
    "nci": ">=1.0.1 <1.1.0"
  },
  "engines": {
    "node": ">=8.0.0"
  }
}
